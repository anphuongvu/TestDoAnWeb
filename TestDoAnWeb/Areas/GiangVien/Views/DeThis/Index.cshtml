@model IEnumerable<TestDoAnWeb.Models.DeThi>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/GiangVien/Views/Shared/_GiangVienLayout.cshtml";
}

<h2>Danh sách đề thi</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenMonThi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayThi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoCauHoi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThoiHanDeThi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThoiGianLamBai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KhoaHoc.TenKhoaHoc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenMonThi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayThi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoCauHoi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThoiHanDeThi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThoiGianLamBai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KhoaHoc.TenKhoaHoc)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MaDeThi }) |
            @Html.ActionLink("Details", "Details", new { id=item.MaDeThi }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MaDeThi })
