@model TestDoAnWeb.Models.DeThi

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/GiangVien/Views/Shared/_GiangVienLayout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>DeThi</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="TenMonThi">Tên môn thi</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenMonThi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenMonThi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="NgayThi">Ngày thi</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.NgayThi, new { @type = "date", @class = "datepicker", htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayThi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group hidden">
            <label class="control-label col-md-2" for="SoCauHoi">Số câu hỏi</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoCauHoi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoCauHoi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="MaKhoaHoc">Mã khóa học</label>
            <div class="col-md-10">
                @Html.DropDownList("MaKhoaHoc", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaKhoaHoc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="ThoiHanDeThi">Thời hạn đề thi</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ThoiHanDeThi, new { @type = "date", @class = "datepicker", htmlAttributes = new { @class = "form-control" } })
                @*@Html.EditorFor(model => model.ThoiHanDeThi, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.ThoiHanDeThi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="ThoiGianLamBai">Thời gian làm bài</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ThoiGianLamBai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ThoiGianLamBai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo đề" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
