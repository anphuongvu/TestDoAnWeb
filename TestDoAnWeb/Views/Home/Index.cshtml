@{
    ViewBag.Title = "Home Page";
}
<style>
    .container-fuild {
        margin-top: 10px;
    }

    .layout {
        height: 650px;
        display: grid;
        grid-template-columns: 1fr 2fr;
        /* grid-column-gap: 20px; */
    }

    .layout-item {
        margin-left: 10px;
        margin-right: 10px;
        border-radius: 10px;
        background-color: #5CC6FF;
        border: 1px solid rgb(6, 218, 255);
    }
    /* Trang chủ HS */
    #mySearch {
        border-radius: 10px;
        width: 95%;
        margin: 10px;
        font-size: 18px;
        padding: 11px;
        border: 1px solid #ddd;
    }

    #myMenu {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    #myMenu li a {
        font-size: 16px;
        padding: 12px;
        text-decoration: none;
        color: black;
        display: block
    }
    #myMenu li a:hover {
        color: #ffffff;
        background-color: #5CC6FF;
    }

    .list {
        height: 550px;
        border-radius: 10px;
        margin: 10px;
        background-color: #f2f2f2;
    }

    .main {
        margin-top: 10px;
        display: grid;
        grid-template-columns: 1fr 4fr;
        height: 620px;
        font-size: 16px;
        border-radius: 10px;
        margin: 10px;
        background-color: #f2f2f2;
        grid-column-gap: 10px;
    }

    img {
        margin: 10px 20px 10px 20px;
    }
    .avatar {
        vertical-align: middle;
        width: 175px;
        height: 150px;
        border-radius: 50%;
}
    .infomation {
        border-radius: 10px;
        margin: 20px;
        border: 1px solid #000;
        text-align: start;
    }
    .infomation h4 {
        margin: 10px 0 0 20px;
    }
</style>
<div class="container-fuild">
    <div class="layout">
        <div class="layout-item">
            <input type="text" id="mySearch" onkeyup="myFunction()" placeholder="Tìm kiếm.." title="Type in a category">
            <div class="list">
                <ul id="myMenu">
                    <li><a href="#">HTML</a></li>
                    <li><a href="#">CSS</a></li>
                    <li><a href="#">JavaScript</a></li>
                    <li><a href="#">PHP</a></li>
                    <li><a href="#">Python</a></li>
                    <li><a href="#">jQuery</a></li>
                    <li><a href="#">SQL</a></li>
                    <li><a href="#">Bootstrap</a></li>
                    <li><a href="#">Node.js</a></li>
                </ul>
            </div>
        </div>
        <div class="layout-item">
            <div class="main">
                <div class="img">
                    <img src="~/img/chuga.png" alt="Avatar" class="avatar">
                </div>
                <div class="infomation">
                    <h4>Thông tin tài khoản</h4>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
        function myFunction() {
          var input, filter, ul, li, a, i;
          input = document.getElementById("mySearch");
          filter = input.value.toUpperCase();
          ul = document.getElementById("myMenu");
          li = ul.getElementsByTagName("li");
          for (i = 0; i < li.length; i++) {
            a = li[i].getElementsByTagName("a")[0];
            if (a.innerHTML.toUpperCase().indexOf(filter) > -1) {
              li[i].style.display = "";
            } else {
              li[i].style.display = "none";
            }
          }
        }
</script>
